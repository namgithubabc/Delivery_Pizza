<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:id="@+id/res_layout"
    android:layout_marginBottom="20dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/image_res"
        android:layout_height="120dp">

        <ImageView
            android:id="@+id/img_restaurant"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/sp1"
            android:background="@drawable/cirle_image_restaurant"
            android:scaleType="centerCrop" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/cirle_sale"
            android:backgroundTint="#00000000"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/free_shop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:text="Free delivery"
                android:gravity="right"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="30dp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_res"
        android:background="@drawable/cirle_info_restaurant"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/item_tx_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Friendly's"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_tx_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="1.3km"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="~" />

            <TextView
                android:id="@+id/item_tx_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="30min"
                android:textSize="16dp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>