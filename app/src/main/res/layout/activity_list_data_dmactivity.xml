<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AminActivity.Home.ListDataDMActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/title_list_category"
        android:textColor="#333"
        android:text="Edit Category"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_option"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_below="@id/title_list_category">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rcv_option_edit_data"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/add_section_option"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_below="@id/list_option"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_add"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add section data"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:layout_marginBottom="22dp"
            android:layout_centerHorizontal="true"
            android:textSize="16dp"
            android:textColor="#333"/>

    </LinearLayout>



</RelativeLayout>